<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".staff.StaffTableListActivity">

    <!-- Profile -->
    <include layout="@layout/include_top_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="0dp"
            android:background="@drawable/button_second"
            app:backgroundTint="@null"
            android:text="Bookings"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="0dp"
            android:background="@drawable/button_second"
            app:backgroundTint="@null"
            android:text="Foods"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="0dp"
            android:background="@drawable/button_primary"
            app:backgroundTint="@null"
            android:text="Tables"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_staff_table_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Table"
        android:background="@color/primary"
        app:backgroundTint="@null"
        android:layout_margin="20dp"/>

    <!-- include bottom nav -->
    <include layout="@layout/include_bottom_nav" />

</LinearLayout>